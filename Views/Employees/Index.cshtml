@model IEnumerable<crud.Models.Employee>


  <h2>Todos os funcionários</h2>
<a href="/Employees/Register" class="btn btn-success">Cadastrar</a>
<hr>
  @foreach (var employee in Model)
  {
      <p>Nome: @employee.Name</p>
      <p>CPF: @employee.Cpf</p>
      <p>Salário: @employee.Salary</p>
      <a href="/Employees/Edit/@employee.Id" class="btn btn-success">Editar</a>
      <a href="/Employees/Delete/@employee.Id" class="btn btn-danger">Deletar</a>
      <hr>
  }



